<!-- This document made using bootstrap and its dependencies -->

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{{title}}}</title>
    <link rel="stylesheet" href="/source/bootstrap-4/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/source/style.css">
  </head>
  <body>
    {{!-- NAV BAR --}}

    <nav class="navbar navbar-expand-sm navbar-light bg-light mb-4" >
        <div class="container">
            <a class="navbar-brand navbar-light" href="/">Rubyfruit Farms</a>
            <ol class="breadcrumb" style="margin-bottom: 0rem;" aria-label="breadcrumb">
                {{#if breadcrumbs}}
                {{#each breadcrumbs}}
                <li class="breadcrumb-item"><a href="{{{this.link}}}">{{{this.page_name}}}</a></li>
                {{/each}}
                {{/if}}
                <li class="breadcrumb-item active" aria-current="page">{{{page_name}}}</li>
            </ol>
        </div>
    </nav>

      {{{body}}}

      <div class="container">
          <p id="tagline">site created by Amelia Walsh & David Kaff in CS340 at Oregon State, Winter 2021</p>
      </div>
